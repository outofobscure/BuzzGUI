<Window x:Class="BuzzGUI.WaveformControl.WaveLengthEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="WaveLengthWindow" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStyle="None" ResizeMode="NoResize"
        UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" 
        >
    <Border BorderBrush="Black" BorderThickness="1" Padding="2" SnapsToDevicePixels="True">
        <Grid SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <TextBox SnapsToDevicePixels="True" Name="textBox" MaxLength="10" MaxLines="1"/>
            <TextBlock SnapsToDevicePixels="True" Name="text" Margin="4,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>

        </Grid>
    </Border>
</Window>
